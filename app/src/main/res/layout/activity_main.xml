<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Karta niezgodności"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/shortDescEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImageView" />

        <EditText
            android:id="@+id/shortDescEditText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Jaka niezgodnośc postąpiła?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerTextView"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/projectNameEditText"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:hint="Numer Projektu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shortDescEditText"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/productIdEditText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:hint="ID Produktu / Numer Rysunku"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/projectNameEditText" />

        <EditText
            android:id="@+id/detailedDescEditText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Napisz opis problemu."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productIdEditText"
            app:layout_constraintBottom_toTopOf="@id/reporterNameEditText"
            android:layout_margin="8dp"
            android:gravity="top"/>

        <EditText
            android:id="@+id/reporterNameEditText"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:hint="Imie i nazwisko"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailedDescEditText" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:text="Zgłoś karte"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reporterNameEditText" />

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Take Photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/submitButton" />

        <ImageView
            android:id="@+id/capturedImageView"
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/cameraButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
